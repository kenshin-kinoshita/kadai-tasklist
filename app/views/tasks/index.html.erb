<% if logged_in? %>
  <h1>タスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task_path(task) %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>
  
  <%= link_to '新規タスクの投稿', new_task_path %>
<% else %>
  <h1>Welcome to the Tasklists</h1>
  <%= link_to 'Sign up now!', signup_path %>
<% end %>